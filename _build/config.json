{
    "name": "StercSEO",
    "lowCaseName": "stercseo",
    "description": "SEO Tab is a MODX Extra that helps you optimize your pages for the best possible performance in search engines, like Google.",
    "author": "Sterc",
    "version": "2.2.1-pl",
    "package":{
        "menus": [{
            "text": "stercseo.seotab",
            "description": "stercseo.menu_desc",
            "action": "home"
        }],
        "elements": {
            "plugins": [{
                "name": "StercSEO",
                "description": "Plugin to render SEO Tab and save all the data.",
                "file": "stercseo.plugin.php",
                "events": [
                    "OnDocFormPrerender",
                    "OnBeforeDocFormSave",
                    "OnLoadWebDocument",
                    "OnPageNotFound",
                    "OnResourceDuplicate",
                    "OnManagerPageBeforeRender",
                    "OnResourceBeforeSort",
                    "OnDocFormSave",
                    "OnEmptyTrash"
                ]
            }],
            "snippets": [{
                "name": "StercSeoSiteMap",
                "description": "Outputs the sitemap based on the resource settings made in SEO Tab",
                "file": "stercseositemap.snippet.php"
            }],
            "chunks": [],
            "templates": [],
            "tvs": []
        },
        "systemSettings": [{
            "key": "context-aware-alias",
            "type": "combo-boolean",
            "value": "0",
            "area": "general"
        },{
            "key": "index",
            "type": "combo-boolean",
            "value": "1",
            "area": "general"
        },{
            "key": "follow",
            "type": "combo-boolean",
            "value": "1",
            "area": "general"
        },{
            "key": "sitemap",
            "type": "combo-boolean",
            "value": "1",
            "area": "general"
        },{
            "key": "priority",
            "value": "0.5",
            "area": "general"
        },{
            "key": "changefreq",
            "value": "weekly",
            "area": "general"
        },{
            "key": "allowed_contexts",
            "value": "",
            "area": "general"
        },{
            "key": "hide_from_usergroups",
            "value": "",
            "area": "general"
        },{
            "key": "hide_for_resources",
            "value": "",
            "area": "general"
        }, {
            "key": "xmlsitemap.babel.add_alternate_links",
            "type": "combo-boolean",
            "value": "1",
            "area": "XML Sitemap"
        }, {
            "key": "xmlsitemap.dependent_ultimateparent",
            "type": "combo-boolean",
            "value": "0",
            "area": "XML Sitemap"
        }, {
            "key": "user_name",
            "type": "textfield",
            "area": "general",
            "value": ""
        }, {
            "key": "user_email",
            "type": "textfield",
            "area": "general",
            "value": ""
        }]
    },
    "database": {
        "tables": ["seoUrl"]
    },
    "build":{
        "resolver": {
            "after": [
                "setupoptions.resolver.php",
                "stercextra.resolver.php",
                "uninstall.resolver.php",
                "update.resolver.php"
            ]
        },
        "setupOptions":{
            "source": "setup.options.php"
        }
    }
}
